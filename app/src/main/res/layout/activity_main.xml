<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.spp.keispp.sqllibv2.MainActivity">

    <fragment
        android:id="@+id/frag_Login"
        android:name="com.spp.keispp.sqllibv2.FragLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        tools:layout="@layout/frag_login" />

    <fragment
        android:id="@+id/frag_ForgotPass"
        android:name="com.spp.keispp.sqllibv2.FragForgotPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        tools:layout="@layout/frag_forgot_pass" />

</RelativeLayout>
